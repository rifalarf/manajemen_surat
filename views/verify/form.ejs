<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verifikasi Surat</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
        }
        .card {
            border: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/verify" style="margin-left: 1rem;">Manajemen Surat</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/admin">Buat Surat</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/manage">Manajemen Surat</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/verify">Verify <span class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <i class="fas fa-check-circle"></i> Verifikasi Surat
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="pdfUpload">Upload Surat (PDF) untuk Scan QR Code:</label>
                            <div class="input-group">
                                <input type="file" class="form-control" id="pdfUpload" accept="application/pdf">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="uploadBtn">Scan</button>
                                </div>
                            </div>
                            <small class="form-text text-muted">Sistem akan membaca QR Code dari PDF dan mengisi kolom Signature secara otomatis.</small>
                        </div>
                        <hr>
                        <form action="/verify/verify" method="post">
                            <div class="form-group">
                                <label for="nomorSurat">Nomor Surat:</label>
                                <input type="text" class="form-control" id="nomorSurat" name="nomorSurat" required>
                            </div>
                            <div class="form-group">
                                <label for="namaKaryawan">Nama Karyawan:</label>
                                <input type="text" class="form-control" id="namaKaryawan" name="namaKaryawan" required>
                            </div>
                            <div class="form-group">
                                <label for="namaPerusahaan">Nama Perusahaan:</label>
                                <input type="text" class="form-control" id="namaPerusahaan" name="namaPerusahaan" required>
                            </div>
                            <div class="form-group">
                                <label for="alasanPeringatan">Alasan Peringatan:</label>
                                <textarea class="form-control" id="alasanPeringatan" name="alasanPeringatan" rows="3" required></textarea>
                            </div>
                            <div class="form-group">
                                <label for="tanggalSurat">Tanggal Surat:</label>
                                <input type="date" class="form-control" id="tanggalSurat" name="tanggalSurat" required>
                            </div>
                            <div class="form-group">
                                <label for="namaPenandatangan">Nama Penandatangan:</label>
                                <input type="text" class="form-control" id="namaPenandatangan" name="namaPenandatangan" required>
                            </div>
                            <div class="form-group">
                                <label for="signature">Signature (dari QR Code):</label>
                                <textarea class="form-control" id="signature" name="signature" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Verifikasi</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('uploadBtn').addEventListener('click', async () => {
            const fileInput = document.getElementById('pdfUpload');
            const signatureTextarea = document.getElementById('signature');
            const uploadBtn = document.getElementById('uploadBtn');

            if (fileInput.files.length === 0) {
                alert('Silakan pilih file PDF terlebih dahulu.');
                return;
            }

            const formData = new FormData();
            formData.append('suratPdf', fileInput.files[0]);

            uploadBtn.disabled = true;
            uploadBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Scanning...';

            try {
                const response = await fetch('/verify/scan-qr', {
                    method: 'POST',
                    body: formData,
                });

                const result = await response.json();

                if (response.ok) {
                    signatureTextarea.value = result.signature;
                    alert('Signature berhasil diekstrak dari QR Code!');
                } else {
                    throw new Error(result.message || 'Gagal memproses PDF.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Terjadi kesalahan: ' + error.message);
                signatureTextarea.value = '';
            } finally {
                uploadBtn.disabled = false;
                uploadBtn.innerHTML = 'Scan';
            }
        });
    </script>
</body>
</html>
